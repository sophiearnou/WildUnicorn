<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Wild Unicorn{% endblock %}</title>
        <link rel="shortcut icon" href="{{ absolute_url(asset('uploads/images/logo1.ico')) }}">
        {{ encore_entry_link_tags('app') }}
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    
        
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-menu" aria-controls="main-menu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            {# <div class="navbar-nav ml-auto nav-item">
                <a class="nav-link" href="{{ path('home', {'_locale': 'fr'}) }}">FR</a><br>
                <a class="nav-link" href="{{ path('home', {'_locale': 'en'}) }}">EN</a>
            </div> #}
            <div class="navbar-nav ml-auto nav-item btn-group btn-group-toggle btn-sm" data-toggle="buttons">
                <button type="button" class="btn btn-primary btn-sm" data-toggle="button" aria-pressed="true"><a class="nav-link" href="{{ path('home', {'_locale': 'fr'}) }}">FR</a>
                <button type="button" class="btn btn-secondary btn-sm" data-toggle="button" aria-pressed="false"><a class="nav-link" href="{{ path('home', {'_locale': 'en'}) }}">EN</a>
            </div>
            
            <div class="collapse navbar-collapse" id="main-menu">
            {{ knp_menu_render('main') }}
            </div>
        </nav>
        
        {% include "flash_messages.html.twig" %}

        {% block body %}{% endblock %}
           
       
        {{ encore_entry_script_tags('app') }}
        {% block javascripts %}{% endblock %}
    </body>
    <footer>{% block footer %}{{include('footer.html.twig')}}{% endblock %}</footer>
</html>
