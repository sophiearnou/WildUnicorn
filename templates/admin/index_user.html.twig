{% extends 'admin_base.html.twig' %}

{% block title %}{{ "user.index"|trans }}{% endblock %}

{% block body %}
<div class="container">
    <h1>{{ "user.index"|trans }}</h1>

    <a class="btn btn-primary mb-2" href="{{ path('user_new') }}"><i class="fa fa-plus" aria-hidden="true"> {{ "user.new"|trans }}</i></a>

    <table id="user-table" class="table">
        <thead class="thead-dark">
            <tr>
                <th>{{ "user.email"|trans }}</th>
                <th>{{ "user.roles"|trans }}</th>
                <th>{{ "user.actions"|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>
                    {% for role in user.roles %}
                        <span class="badge badge-secondary m-1">{{ role }}</span>
                    {% endfor %}
                </td>
                <td>
                    <a class="btn btn-success" href="{{ path('user_show', {'id': user.id}) }}"><i class="fa fa-eye" aria-hidden="true"></i></a>
                    <a class="btn btn-info" href="{{ path('user_edit', {'id': user.id}) }}"><i class="fas fa-edit" aria-hidden="true"></i></a>
                    <a class="btn btn-danger" href="{{ path('user_delete', {'id': user.id}) }}" ><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ "user.no_record"|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
