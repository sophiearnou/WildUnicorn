{% extends 'admin_base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="container">
    <h1>User index</h1>

    <table id="user-table" class="table">
        <thead class="thead-dark">
            <tr>
                <th>Email</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>
                    {% for role in user.roles %}
                        <span class="badge badge-secondary m-1">{{ role }}</span>
                    {% endfor %}
                </td>
                <td>
                    <a class="btn btn-success" href="{{ path('user_show', {'id': user.id}) }}"><i class="fa fa-eye" aria-hidden="true"></i></a>
                    <a class="btn btn-info" href="{{ path('user_edit', {'id': user.id}) }}"><i class="fas fa-edit" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{"user.no_record"|trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
    </div>
{% endblock %}
