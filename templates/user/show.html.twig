{% extends 'admin_base.html.twig' %}

{% block title %}{{"user.name"|trans}}{% endblock %}

{% block body %}
 <div class="container">
    <h1>{{"user.name"|trans}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{"user.email"|trans}}</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>{{"user.roles"|trans}}</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="mr-2" href="{{ path('admin_user') }}">{{"back_to_list"|trans}}</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">{{"user.edit"|trans}}</a>

    {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
