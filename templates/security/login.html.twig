{% extends 'base.html.twig' %}

{% block title %}{{"user.login"|trans}}{% endblock %}

{% block body %}
<div class="login-container text-c animated flipInX">
    <div>
        <h1 class="logo-badge text-whitesmoke"><span class="fa fa-user-circle"></span></h1>
    </div>
        <h3 class="text-whitesmoke">{{"user.login"|trans}}</h3>
        
    <div class="container-content">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        {% if app.user %}
            <div class="mb-3 text-whitesmoke">

                You are logged in as {{ app.user.username }}
                <a class="text-rose" href="{{ path('app_logout') }}">
                    {{"user.logout"|trans}}
                </a>

            </div>
    {% endif %}
        <form class="margin-t" method="POST">
            <div class="form-group">
                {# <label for="inputEmail">{{"user.email"|trans}}</label> #}
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required placeholder="{{"user.email_example"|trans}}">
            </div>
            <div class="form-group">
                {# <label class="mt-3" for="inputPassword">{{"user.password"|trans}}</label> #}
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="{{"user.password"|trans}}" required>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </div>
            <button type="submit" class="form-button button-l margin-b">
                {{"user.connexion"|trans}}
            </button>
            <a class="text-rose" href="{{path("app_register")}}">
                <small>{{"user.register"|trans}}</small>
            </a>
        </form>
    </div>
    <svg class="pulse" viewBox="0 0 1024 1024" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
        <circle id="Oval" cx="512" cy="512" r="512"></circle>
        <circle id="Oval" cx="512" cy="512" r="512"></circle>
        <circle id="Oval" cx="512" cy="512" r="512"></circle>
